extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Genre:
      input#name.form-control(type='text', placeholder='Fantasy, Poetry etc.' name='name' required value=(genre ? genre.name : ''))
      label(for='book') Book: 
      input#book.form-control(type='text', placeholder='Enter book title' name='book' required value=(genre ? genre.book : ''))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
